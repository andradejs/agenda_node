<%- include('includes/header')%>
    <%- include('includes/nav')%>

        <div class="container">
            <div class="row">
                <div class="col-lg-2"></div>
                <div class="col-lg-8 my-3">
                    <h1 class="text-center">Login</h1>
                    <p class="text-center lead">Faça o login ou crie sua conta logo</p>
                    <%- include('includes/mensagens')   %>
                    <div class="row">
                        <div class="col-lg">
                            <h4>Faça seu cadastro</h4>
                            <form action="/login/cadastrar" method="POST">
                                <div class="form-group">
                                    <label>Coloque seu Email</label>
                                    <input name="email" type="text" class="form-control" id="exampleInputEmail1"
                                        aria-describedby="emailHelp" placeholder="usuario@gmai.com">
                                    <small id="emailHelp" class="form-text text-muted">Nunca compartilhe seu email com
                                        alguem</small>
                                </div>
                                <div class="form-group">
                                    <label>Senha</label>
                                    <input name="senha" type="password" class="form-control" id="exampleInputPassword1"
                                        placeholder="senha">
                                </div>

                                <button type="submit" class="btn btn-primary">Cadastrar</button>
                            </form>
                        </div>
                        <div class="col-lg">
                            <h4>Entrar no sistema</h4>
                            <form action="/login/login" method="post">
                                
                                <div class="form-group">
                                    <label>Coloque seu Email</label>
                                    <input name = "email" type="email" class="form-control" id="exampleInputEmail1"
                                        aria-describedby="emailHelp" placeholder="usuario@gmai.com">
                                    <small id="emailHelp" class="form-text text-muted">Nunca compartilhe seu email com
                                        alguem</small>
                                </div>
                                <div class="form-group">
                                    <label>Senha</label>
                                    <input name="email" type="password" class="form-control" id="exampleInputPassword1"
                                        placeholder="senha">
                                </div>

                                <button type="submit" class="btn btn-primary">Logar</button>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="col-lg-2"></div>
            </div>
        </div>

        <%- include('includes/footer')%>