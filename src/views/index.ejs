<%- include('includes/header')%>
    <%- include('includes/nav')%>

        <div class="container">
            <div class="row">
                <div class="col-lg-2"></div>
                <div class="col-lg-8 my-3">
                    <h1 class="text-center">Agenda</h1>
                    <p class="text-center lead">Seus contotos estã logo a baixo</p>

                    <%- include('includes/mensagens')%>
                        <% if (contatos.length> 0){ %>
                            <div class="responsive-table">
                                <table class="table my-4">

                                    <%for (const contato of contatos){ %>


                                        <tr>
                                            <td>
                                                <%= contato.nome %>
                                            </td>
                                            <td>
                                                <%= contato.sobrenome %>
                                            </td>
                                            <td>
                                                <%= contato.email %>
                                            </td>
                                            <td>
                                                <%= contato.telefone %>
                                            </td>
                                            <td><a href="/contatos/index/<%=contato._id%>">editar</a></td>
                                            <td><a class="text-danger"
                                                    href="/contatos/deletar/<%=contato._id%>">deletar</a></td>

                                        </tr>
                                        <%}%>
                                </table>
                            </div>
                            <% }else {%>
                                <p class="text-center lead"> Você não tem contatos salvos </p>
                                <%}%>
                </div>

                <div class="col-lg-2"></div>
            </div>
        </div>

        <%- include('includes/footer')%>